<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="100px"
            android:paddingTop="100px"
            android:text="Customer Profile"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/contactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/contactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingLeft="10px"
                android:paddingTop="15px"
                app:srcCompat="@drawable/ic_contacts_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/number"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/contactButtonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingTop="10px"
                app:srcCompat="@android:drawable/ic_input_add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/contactNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Phone Number 2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/kilometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:ems="10"
                android:hint="Kilometer"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/plateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:ems="10"
                android:hint="@string/plate_number"
                android:inputType="textPersonName" />
        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:layout_marginRight="200px"
            android:text="SAVE" />

    </LinearLayout>
</RelativeLayout>